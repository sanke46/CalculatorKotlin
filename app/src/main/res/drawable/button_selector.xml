<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="2dip" android:color="#00ffffff" />
            <gradient android:angle="-90" android:startColor="#60ffffff" android:endColor="#60ffffff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="2dip" android:color="#00ffffff" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="2dip" android:color="#00ffffff" />
            <gradient android:angle="-90" android:startColor="#10ffffff" android:endColor="#10ffffff" />
        </shape>
    </item>
</selector>