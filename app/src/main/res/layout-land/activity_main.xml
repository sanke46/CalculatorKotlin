<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ilafedoseev.calculatorkotlin.MainActivityK"
    android:background="@drawable/gradient"
    android:orientation="vertical">


    <TextView
        android:id="@+id/number"
        android:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:focusable="true"
        android:scrollHorizontally="true"
        android:textColor="#ffffff"
        android:text="@string/_0"/>


    <TextView
        android:id="@+id/cacheNumber"
        android:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:gravity="right"
        android:textSize="25dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:text="@string/_0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="numberButton"
                    android:text="@string/_1"/>

                <Button
                    android:id="@+id/two"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="numberButton"
                    android:text="@string/_2"/>

                <Button
                    android:id="@+id/three"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="numberButton"
                    android:text="@string/_3"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/four"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="numberButton"
                    android:text="@string/_4"/>

                <Button
                    android:id="@+id/five"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="numberButton"
                    android:text="@string/_5"/>

                <Button
                    android:id="@+id/six"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="numberButton"
                    android:text="@string/_6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/seven"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="numberButton"
                    android:text="@string/_7"/>

                <Button
                    android:id="@+id/eighte"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="numberButton"
                    android:text="@string/_8"/>

                <Button
                    android:id="@+id/nine"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="numberButton"
                    android:text="@string/_9"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/zero"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="numberButton"
                    android:text="@string/_0"/>

                <Button
                    android:id="@+id/dot"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="mathSymbolButton"
                    android:text="@string/dot"/>

                <Button
                    android:id="@+id/equals"
                    style="@style/ButtonStyleLand"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="equalButton"
                    android:text="@string/equals"/>

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/division"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="mathSymbolButton"
                        android:text="@string/slash"/>

                    <Button
                        android:id="@+id/delete_all"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="functionsButton"
                        android:text="@string/sin"/>

                    <Button
                        android:id="@+id/sin"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="clearAllButton"
                        android:text="@string/ac"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/times"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="mathSymbolButton"
                        android:text="@string/multiply"/>

                    <Button
                        android:id="@+id/percent"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="functionsButton"
                        android:text="@string/cos"/>

                    <Button
                        android:id="@+id/cos"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="percentButton"
                        android:textAllCaps="false"
                        android:text="@string/percent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@id/minus"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="mathSymbolButton"
                        android:text="@string/minus"/>

                    <Button
                        android:id="@+id/factar"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="functionsButton"
                        android:text="@string/tan"/>

                    <Button
                        android:id="@+id/tan"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="factorialButton"
                        android:text="@string/factorial"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plus"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="mathSymbolButton"
                        android:text="@string/plus"/>

                    <Button
                        android:id="@+id/iter"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="logButton"
                        android:text="@string/log"/>

                    <Button
                        android:id="@+id/log"
                        style="@style/ButtonStyleLand"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="mathSymbolButton"
                        android:text="@string/degree"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
